{
  "name": "ide-vala",
  "version": "0.2.2",
  "main": "lib/main",
  "description": "Vala language support for Atom-IDE",
  "keywords": [
    "atom-ide",
    "vala",
    "lsp",
    "language-client"
  ],
  "repository": "https://github.com/paysonwallach/atom-ide-vala",
  "license": "GPL-3.0",
  "scripts": {
    "format": "prettier --write .",
    "release": "standard-version"
  },
  "activationHooks": [
    "source.vala:root-scope-used",
    "source.vapi:root-scope-used"
  ],
  "engines": {
    "atom": ">=1.21.0"
  },
  "dependencies": {
    "atom-languageclient": "git+https://github.com/atom-ide-community/atom-languageclient.git#v1.0.0",
    "atom-package-deps": "^7.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "precommit": "npm run format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "enhancedScopes": [
    "source.vala",
    "source.vapi"
  ],
  "configSchema": {
    "vlsPath": {
      "type": "string",
      "title": "Vala language server path",
      "default": "vala-language-server",
      "description": "Use custom Vala language server path"
    }
  },
  "consumedServices": {
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    },
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "find-references": {
      "versions": {
        "0.1.0": "provideFindReferences"
      }
    },
    "signature-help": {
      "versions": {
        "0.1.0": "provideSignatureHelp"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    }
  }
}
